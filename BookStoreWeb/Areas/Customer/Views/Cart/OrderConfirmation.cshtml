@model int

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="confirmation-card">
                <div class="success-animation">
                    <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                        <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none"/>
                        <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
                    </svg>
                </div>
                
                <div class="confirmation-content">
                    <h1 class="display-4 fw-bold mb-4" style="color: #192E2F;">Success!</h1>
                    <div class="order-info mb-4">
                        <span class="badge bg-success fs-6 mb-3 px-4 py-2 rounded-pill">
                            <i class="bi bi-check2-circle me-2"></i>Order Confirmed
                        </span>
                        <h4 class="text-dark mt-3 mb-0">Order #@Model</h4>
                        <div class="divider">
                            <span></span>
                            <span><i class="bi bi-check2-circle"></i></span>
                            <span></span>
                        </div>
                    </div>
                    
                    <div class="confirmation-message">
                        <p class="lead text-muted mb-2">
                            Thank you for shopping with Leaf & Letter!
                        </p>
                        <p class="text-muted">
                            Your order has been successfully placed and will be processed shortly.
                            You will receive an email confirmation with order details and tracking information.
                        </p>
                        <div class="alert alert-light border mt-4 p-4 rounded-4">
                            <div class="d-flex align-items-center text-primary">
                                <i class="bi bi-truck fs-4 me-3"></i>
                                <div class="text-start">
                                    <h6 class="mb-1">Estimated Delivery</h6>
                                    <p class="mb-0 small">@DateTime.Now.AddDays(7).ToString("MMM dd") - @DateTime.Now.AddDays(14).ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="next-steps">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3 rounded-pill">
                            <i class="bi bi-house-heart me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
