@{
    var status = Context.Request.Query["status"];
    var pending = "text-primary";
    var inprocess = "text-primary";
    var completed = "text-primary";
    var approved = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        case "pending":
            pending = "text-white active bg-primary";
            break;
        case "inprocess":
            inprocess = "text-white active bg-primary";
            break;
        case "completed":
            completed = "text-white active bg-primary";
            break;
        case "approved":
            approved = "text-white active bg-primary";
            break;
        default:
            all = "text-white active bg-primary";
            break;
    }
}

<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary bg-gradient py-4 rounded-top-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white m-0">Order Management</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="status-filter-list justify-content-center">
                <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                    <div class="list-group-item @inprocess">
                        <i class="bi bi-gear me-2"></i>In Process
                    </div>
                </a>
                <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="pending">
                    <div class="list-group-item @pending">
                        <i class="bi bi-clock me-2"></i>Payment Pending
                    </div>
                </a>
                <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                    <div class="list-group-item @completed">
                        <i class="bi bi-check-circle me-2"></i>Completed
                    </div>
                </a>
                <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="approved">
                    <div class="list-group-item @approved">
                        <i class="bi bi-shield-check me-2"></i>Approved
                    </div>
                </a>
                <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="all">
                    <div class="list-group-item @all">
                        <i class="bi bi-collection me-2"></i>All Orders
                    </div>
                </a>
            </div>

            <div class="table-responsive mt-4">
                <table id="orderTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}
