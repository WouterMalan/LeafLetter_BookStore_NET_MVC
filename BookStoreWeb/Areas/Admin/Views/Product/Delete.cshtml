@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-danger bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-4 rounded">
                <div class="alert alert-warning mb-4">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Are you sure you want to delete this product? This action cannot be undone.
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Title" class="form-label">Book Title</label>
                        <input asp-for="Title" disabled class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ISBN" class="form-label">ISBN</label>
                        <input asp-for="ISBN" disabled class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Author" class="form-label">Author</label>
                        <input asp-for="Author" disabled class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ListPrice" class="form-label">List Price</label>
                        <input asp-for="ListPrice" disabled class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Price50" class="form-label">Price (50+)</label>
                        <input asp-for="Price50" disabled class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Price100" class="form-label">Price (100+)</label>
                        <input asp-for="Price100" disabled class="form-control" />
                    </div>

                    <div class="col-12 mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" disabled class="form-control" rows="3"></textarea>
                    </div>

                    <div class="row pt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger form-control">
                                <i class="bi bi-trash me-2"></i>Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
